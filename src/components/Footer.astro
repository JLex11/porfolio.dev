---
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import type { ui } from "@/i18n/ui"
import { useTranslatedPath, useTranslations } from "@/i18n/utils"

const currentLocale = Astro.currentLocale as keyof typeof ui
const t = useTranslations(currentLocale)
const translatePath = useTranslatedPath(currentLocale)
---

<footer
  class="opacity-80 m-4 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-center px-4"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto md:flex md:items-center md:justify-between py-4"
  >
    <a
      href="https://www.linkedin.com/in/john-alexander-calle/"
      target="_blank"
      rel="noopener"
    >
      <span
        class="flex items-center p-1 px-3 gap-1 rounded-xl text-sm sm:text-center text-zinc-800/90 dark:text-zinc-200/90 hover:bg-white/10"
      >
        <LinkedInIcon class="size-4" />Alexander
      </span>
    </a>
    <ul
      class="flex flex-wrap items-center mt-3 text-sm font-medium dark:text-white/90 sm:mt-0"
    >
      <li>
        <a
          href={translatePath("/#sobre-mi", currentLocale)}
          class="hover:underline me-4 md:me-6">{t("footer.about.title")}</a
        >
      </li>
      <li>
        <a
          id="contacto"
          href="mailto:alexcalle.paola@gmail.com"
          class="hover:underline">{t("footer.contact.title")}</a
        >
      </li>
    </ul>
  </div>
</footer>

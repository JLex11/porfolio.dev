---
import type { ui } from "@/i18n/ui"
import { useTranslations } from "@/i18n/utils"

const personalImageAlt = "Alexander Calle"

const t = useTranslations(Astro.currentLocale as keyof typeof ui)
---

<article
  class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row"
>
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-yellow-100 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
  >
    <p>
      {t("section.about.description.paragraph1")}
    </p>

    <p>
      {t("section.about.description.paragraph2.part1")}
      <strong>{t("section.about.description.paragraph2.part2")}</strong>
      {t("section.about.description.paragraph2.part3")}
      <strong>{t("section.about.description.paragraph2.part4")}</strong>
      {t("section.about.description.paragraph2.part5")}
    </p>

    <p>
      {t("section.about.description.paragraph3.part1")}
      <strong>{t("section.about.description.paragraph3.part2")}</strong>
      {t("section.about.description.paragraph3.part3")}
      <strong>{t("section.about.description.paragraph3.part4")}</strong>
      {t("section.about.description.paragraph3.part5")}
      {t("section.about.description.paragraph3.part6")}
      {t("section.about.description.paragraph3.part7")}
    </p>
  </div>

  <img
    width="200"
    height="200"
    src="/me.avif"
    alt={personalImageAlt}
    class="order-1 object-cover w-64 h-full p-1 md:order-2 rotate-3 lg:p-2 lg:w-64 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
    style="object-position: 50% 50%"
  />
</article>

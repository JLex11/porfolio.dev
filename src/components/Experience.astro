---
import type { ui } from "@/i18n/ui";
import ExperienceItem from "./ExperienceItem.astro";
import { useTranslations } from "@/i18n/utils";

const currentLocale = Astro.currentLocale as keyof typeof ui;
const t = useTranslations(currentLocale);

const EXPERIENCIE = [
  {
    date: t("section.experience1.date"),
    title: t("section.experience1.title"),
    company: t("section.experience1.company"),
    description: t("section.experience1.description"),
  },
];
---

<ol class="relative mt-16">
  {
    EXPERIENCIE.map((experiencie) => (
      <li class="">
        <ExperienceItem {...experiencie} />
      </li>
    ))
  }
</ol>
